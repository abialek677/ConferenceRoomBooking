@model ConferenceRoomBooking.Models.ViewModels.RoomManageViewModel
@{
    ViewData["Title"] = "Zarządzanie Salkami";
}

<h2 class="mt-4 mb-4">Zarządzanie Salami Konferencyjnymi</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Dodaj Nową Salę</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-action="AddRoom">
                    <div class="mb-3">
                        <label for="NewRoomName" class="form-label">Nazwa sali</label>
                        <input type="text" class="form-control" id="NewRoomName" 
                               name="NewRoomName" required placeholder="np. Kreatywna">
                    </div>
                    <div class="mb-3">
                        <label for="NewRoomCapacity" class="form-label">Pojemność (liczba miejsc)</label>
                        <input type="number" class="form-control" id="NewRoomCapacity" 
                               name="NewRoomCapacity" required min="1" placeholder="np. 10">
                    </div>
                    <button type="submit" class="btn btn-primary">Dodaj Salę</button>
                </form>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Lista Sali</h5>
            </div>
            <div class="card-body">
                @if (Model.Rooms.Any())
                {
                    <ul class="list-group">
                        @foreach (var room in Model.Rooms)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@room.Name</strong>
                                    <br>
                                    <small class="text-muted">Pojemność: @room.Capacity miejsc</small>
                                </div>
                                <form method="post" asp-action="DeleteRoom" asp-route-id="@room.Id" 
                                      onsubmit="return confirm('Czy na pewno chcesz usunąć salkę @room.Name?');">
                                    <button type="submit" class="btn btn-danger btn-sm">Usuń</button>
                                </form>
                            </li>
                        }
                    </ul>
                }
                else
                {
                    <p class="text-muted">Brak sali w systemie.</p>
                }
            </div>
        </div>
    </div>
</div>
