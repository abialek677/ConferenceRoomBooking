<!DOCTYPE html>
<html lang="pl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - System rezerwacji sali koferencyjnych</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <style>
        body {
            padding-top: 80px !important;
            background: #f7fafd !important;
            font-family: 'Inter', Arial, sans-serif;
        }
        .card, .modal-content, .login-card {
            border-radius: 14px;
            box-shadow: 0 8px 40px rgba(30,120,250,.07);
            background: white;
        }
        .navbar {
            background: #267fff !important;
            box-shadow: 0 2px 8px rgba(38,127,255,.04);
        }
        .navbar-brand, .nav-link, .navbar-text {
            color: #fff !important;
            font-weight: 500;
            font-size: 18px;
        }
        .navbar .nav-link.active, .navbar .nav-link:hover {
            color: #b8e0ff !important;
        }
        .btn-primary, .btn-success, .btn-info {
            border-radius: 20px;
            font-weight: 500;
            background: linear-gradient(90deg,#3895d3 0%, #71afe5 100%);
            border: none;
            transition: background .2s;
            box-shadow: 0 2px 8px #e5f7ff33;
        }
        .btn-primary:hover, .btn-success:hover, .btn-info:hover {
            background: linear-gradient(90deg,#267fff 0%, #71afe5 100%);
        }
        .calendar-cell {
            background: #fff;
            border: 1.5px solid #e5eef7;
            transition: box-shadow .16s;
            min-height: 56px;
            box-shadow: 0 0px 0 rgba(38,127,255,0);
            cursor: pointer;
            font-size: 15px;
        }
        .calendar-cell:hover {
            box-shadow: 0 2px 12px #3895d333;
            border-color: #b8e0ff !important;
            background: #e6f0fa;
        }
        .has-reservations {
            background: #e5f2fb !important;
            border: 2px solid #3895d3 !important;
        }
        .booking-info {
            font-size: 15px;
            margin: 2px 0;
            background: #fff;
            border-radius: 7px;
            border: 1px solid #b8e0ff;
            color: #267fff;
            margin-bottom: 3px;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 5px;
        }
        .booking-info:before {
            content: 'ðŸ“…';
            margin-right: 4px;
            color: #3895d3;
        }
        input, select, .form-control {
            border-radius: 10px !important;
            border: 1px solid #e5eef7 !important;
            padding: 10px 14px !important;
            font-size: 16px !important;
        }
        label {
            color: #3895d3;
            font-weight: 500;
        }
        .login-card {
            margin-top: 80px;
            box-shadow: 0 6px 40px #3895d314, 0 1.5px 6px #e5e9f7cc;
        }
        .alert-success, .alert-danger {
            border-radius: 10px; font-size: 16px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Calendar", "Booking")">| Rezerwacja Sali |</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Calendar", "Booking")">Kalendarz</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("MyBookings", "Booking")">Moje Rezerwacje</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Manage", "Room")">ZarzÄ…dzaj Salkami</a>
                            </li>
                        }
                    }
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <span class="navbar-text me-3 d-flex align-items-center" style="height:100%;">
                                <strong>@User.Identity.Name</strong>
                                @if (User.IsInRole("Admin"))
                                {
                                    <span class="badge bg-danger ms-2">Admin</span>
                                }
                            </span>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "Account")">Wyloguj</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Account")">Zaloguj</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
